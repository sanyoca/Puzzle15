<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sanya.puzzle15.MainActivity">

    <LinearLayout
        android:id="@+id/row1"
        style="@style/rowlayouts"></LinearLayout>

    <LinearLayout
        android:layout_below="@id/row1"
        android:id="@+id/row2"
        style="@style/rowlayouts"></LinearLayout>

    <LinearLayout
        android:layout_below="@id/row2"
        android:id="@+id/row3"
        style="@style/rowlayouts"></LinearLayout>

    <LinearLayout
        android:layout_below="@id/row3"
        android:id="@+id/row4"
        style="@style/rowlayouts"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/helper"></RelativeLayout>

    <View
        android:layout_width="5dp"
        android:id="@+id/verticalline"
        android:visibility="gone"
        android:layout_height="140dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="78dp"
        android:background="@android:color/holo_red_dark">
    </View>

    <View
        android:visibility="gone"
        android:layout_width="140dp"
        android:id="@+id/horizontalline"
        android:layout_height="5dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="142dp"
        android:background="@android:color/holo_red_dark">
    </View>

    <LinearLayout
        android:layout_below="@id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout style="@style/wrapped">

            <RadioGroup
                android:id="@+id/radiogroup"
                style="@style/wrapped">

                <RadioButton
                    android:id="@+id/button10"
                    style="@style/wrapped"
                    android:tag="100"
                    android:text="@string/steps10" />

                <RadioButton
                    android:id="@+id/button30"
                    style="@style/wrapped"
                    android:tag="300"
                    android:text="@string/steps30" />

                <RadioButton
                    android:id="@+id/button50"
                    style="@style/wrapped"
                    android:tag="500"
                    android:text="@string/steps50" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout style="@style/ll_shufflebutton">

            <Spinner
                android:visibility="gone"
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/shufflebutton"
                style="@style/wrapped"
                android:tag="700"
                android:text="@string/shuffle" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
