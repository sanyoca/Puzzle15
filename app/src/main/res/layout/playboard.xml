<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dirtywhite"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sanya.puzzle15.MainActivity">

    <LinearLayout
        android:id="@+id/frame"
        style="@style/playboardstyle"
        android:background="@drawable/background_frame">

        <LinearLayout
            android:id="@+id/row1"
            style="@style/rowlayouts"></LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            style="@style/rowlayouts"></LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            style="@style/rowlayouts"></LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            style="@style/rowlayouts"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/radionshuffle"
        style="@style/radionshuffle">

        <LinearLayout style="@style/wrapped">

            <RadioGroup
                android:id="@+id/radiogroup"
                style="@style/wrapped">

                <RadioButton
                    android:id="@+id/button30"
                    style="@style/wrapped"
                    android:checked="true"
                    android:tag="30"
                    android:text="@string/steps30" />

                <RadioButton
                    android:id="@+id/button50"
                    style="@style/wrapped"
                    android:tag="50"
                    android:text="@string/steps50" />

                <RadioButton
                    android:id="@+id/button100"
                    style="@style/wrapped"
                    android:tag="100"
                    android:text="@string/steps100" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout style="@style/ll_shufflebutton">

            <Spinner
                android:id="@+id/spinner1"
                style="@style/wrapped"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:visibility="gone" />

            <Button
                android:id="@+id/shufflebutton"
                style="@style/shufflebutton"
                android:tag="700"
                android:text="@string/shuffle" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/movesandtime"
        style="@style/movesandtime">

        <LinearLayout style="@style/movesandtimetext">

            <TextView
                style="@style/wrapped"
                android:text="@string/moves" />

            <TextView
                android:id="@+id/moves_textview"
                style="@style/wrapped"
                android:text=": 0" />

        </LinearLayout>

        <LinearLayout style="@style/movesandtimetext">

            <Chronometer
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:format="%m:%s"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
