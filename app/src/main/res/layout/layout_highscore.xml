<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_highscore"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/highscoretables"
            android:id="@+id/layout_top5moves">

            <TextView
                android:id="@+id/titletop5moves"
                style="@style/toptitle"
                android:text="@string/top5moves" />

            <TextView
                android:id="@+id/textView_top5moves_30steps"
                style="@style/subtitle"
                android:text="@string/steps30" />

            <LinearLayout
                android:id="@+id/top5moves30layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/textView_top5moves_50steps"
                style="@style/subtitle"
                android:text="@string/steps50" />

            <LinearLayout
                android:id="@+id/top5moves50layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/textView_top5moves_100steps"
                style="@style/subtitle"
                android:text="@string/steps100" />

            <LinearLayout
                android:id="@+id/top5moves100layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/highscoretables"
            android:id="@+id/layout_top5times"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/titletop5times"
                style="@style/toptitle"
                android:text="@string/top5times" />

            <TextView
                android:id="@+id/textView_top5times_30steps"
                style="@style/subtitle"
                android:text="@string/steps30" />

            <LinearLayout
                android:id="@+id/top5times30layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/textView_top5times_50steps"
                style="@style/subtitle"
                android:text="@string/steps50" />

            <LinearLayout
                android:id="@+id/top5times50layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/textView_top5times_100steps"
                style="@style/subtitle"
                android:text="@string/steps100" />

            <LinearLayout
                android:id="@+id/top5times100layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>