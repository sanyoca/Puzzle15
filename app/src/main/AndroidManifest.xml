<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sanya.puzzle15">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_puzzle15"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Classicalpuzzle"
            android:label="Classical 15 puzzle"/>
        <activity android:name=".Picturepuzzle"
            android:label="15 puzzle with a picture"/>
        <activity android:name=".Wallspuzzle"
            android:label="15 puzzle with a picture"/>
        <activity android:name=".Gameboard"
            android:label="15 puzzle with a picture"/>
        <activity android:name=".Showrules"
            android:label="Rules of 15 puzzle"/>

    </application>

</manifest>